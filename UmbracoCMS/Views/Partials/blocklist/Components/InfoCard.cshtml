@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using System.Linq
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.InfoCard)Model.Content;
    var imgSrc = content.InfoImage?.FirstOrDefault()?.Url() ?? Url.Content("~/images/Risk-Management.svg");
}

<div class="flex flex-col gap-4">
    <h2 class="text-primary text-[1.375rem] font-semibold">@content.InfoTitle</h2>
    <img src="@imgSrc" alt="@content.InfoTitle" />
    <p class="text-body-text text-[0.875rem] font-normal">@content.InfoText</p>
</div>
